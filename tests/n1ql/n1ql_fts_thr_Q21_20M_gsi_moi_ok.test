[test_case]
test = perfrunner.tests.n1ql.N1QLThroughputTest

[showfast]
title = Q21, COUNT DISTINCT, MOI, not_bounded
component = n1ql
category = API2
sub_category = MOI

[cluster]
mem_quota = 20480
index_mem_quota = 40960
fts_index_mem_quota = 40960
initial_nodes = 6
num_buckets = 1

[compaction]
db_percentage = 100

[bucket]
replica_number = 0

[secondary]
indexer.settings.storage_mode = plasma

[load]
items = 1000000
size = 1024
workers = 80
doc_gen = reverse_lookup

[index]
statements =
    CREATE INDEX idx ON `bucket-1`(capped_small);
couchbase_fts_index_name = perf_fts_index
couchbase_fts_index_configfile = tests/n1ql/fts/index/fts_index.json

[access]
creates = 0
reads = 0
updates = 100
deletes = 0
throughput = 30000
items = 1000000
workers = 20
time = 120
n1ql_queries = count-distinct
n1ql_workers = 480

[n1ql-count-distinct]
statement = SELECT meta().id FROM `bucket-1` AS t1 WHERE SEARCH(t1, "dedf23")
scan_consistency = not_bounded
args = ["{capped_small}"]
